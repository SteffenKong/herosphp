<?xml version="1.0" encoding="UTF-8"?>
<database dbhost="localhost" dbuser="root" dbpass="123456" dbname="herosphpTest" charset="utf8">
  <table name="user" comment="用户表" engine="InnoDB">
    <pk name="id" type="int(11)" ai="true" />

    <fields>
      <field name="username" type="varchar(32)" default="" comment="用户名" />
      <field name="password" type="varchar(32)" default="" comment="密码" />
    </fields>
  </table>

  <table name="news" comment="新闻表" engine="InnoDB">
    <pk name="id" type="int(11)" ai="true" />

    <fields>
      <field name="title" type="varchar(100)" default="" comment="标题" />
      <field name="content" type="text" default="" comment="内容" />
    </fields>
  </table>
</database>